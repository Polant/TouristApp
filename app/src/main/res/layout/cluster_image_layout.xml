<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/custom_cluster_image_size"
    android:layout_height="@dimen/custom_cluster_image_size">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/custom_cluster_image_size"
        android:layout_height="@dimen/custom_cluster_image_size"/>

    <TextView
        android:id="@id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Bubble.TextAppearance.Light"
        android:background="@android:color/black"
        android:paddingLeft="@dimen/custom_cluster_text_padding"
        android:paddingRight="@dimen/custom_cluster_text_padding"
        android:layout_gravity="center"
        android:alpha=".8"/>

</FrameLayout>